#include <iostream>
#include <iomanip>
using namespace std;

int main() {
	// your code goes here
	int x;
	float y;
	cin>>x;
	cin>>y;
	if(x>0&&x<=2000){
	    if(y>=0&&y<=2000){
	      if(x%5==0){
	        if(y>=x+0.5){
	        y=y-x-0.50;
	        cout<<fixed<<setprecision(2)<<y;
	        }
	        else{
	            cout<<fixed<<setprecision(2)<<y;
	        }
	    }
	    else
	     cout<<fixed<<setprecision(2)<<y;
	   }
	}
	return 0;
}
