#include <iostream>
using namespace std;

int gcd(int a,int b){
    return (b==0)?a:gcd(b,a%b);
}
int main() {
    int T,x,y;
    cin>>T;
    while(T--){
        cin>>x>>y;
        if(gcd(x,y)>1)
         cout<<0;
        else if(gcd(x+1,y)>1||gcd(x,y+1)>1)
        cout<<1;
        else 
        cout<<2;
        cout<<endl;
    }
	return 0;
}
